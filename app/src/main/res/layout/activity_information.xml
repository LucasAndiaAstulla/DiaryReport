<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="141dp"
        android:layout_height="29dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Seja bem-vindo"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namePull"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="{Nome aqui}"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="53dp"
        android:layout_height="28dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="60dp"
        android:text="Data:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datePull"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:text="{Data aqui}"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/textDate"
        app:layout_constraintTop_toTopOf="@id/textDate"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Usado o Constraint Layout para ser o conteiner das informações de vendas -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxVendas"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_bg"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDate">


        <TextView
            android:id="@+id/titleVendas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendas:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Personal:"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleVendas" />

        <EditText
            android:id="@+id/editPersonal"
            android:layout_width="52dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textPersonal"
            app:layout_constraintStart_toEndOf="@id/textPersonal" />

        <TextView
            android:id="@+id/textMensal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Mensal:"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textPersonal"
            app:layout_constraintStart_toEndOf="@id/editPersonal" />

        <EditText
            android:id="@+id/editMensal"
            android:layout_width="56dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textMensal"
            app:layout_constraintStart_toEndOf="@id/textMensal" />


        <TextView
            android:id="@+id/textDiaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Diária:"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPersonal" />

        <EditText
            android:id="@+id/editDiaria"
            android:layout_width="53dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textDiaria"
            app:layout_constraintStart_toEndOf="@id/textDiaria" />

        <TextView
            android:id="@+id/textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Start:"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textDiaria"
            app:layout_constraintStart_toEndOf="@id/editDiaria" />


        <EditText
            android:id="@+id/editStart"
            android:layout_width="47dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textStart"
            app:layout_constraintStart_toEndOf="@id/textStart" />

        <TextView
            android:id="@+id/textPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Plus:"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDiaria" />

        <EditText
            android:id="@+id/editPlus"
            android:layout_width="53dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textPlus"
            app:layout_constraintStart_toEndOf="@id/textPlus" />

        <TextView
            android:id="@+id/textVisitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Visitas:"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textPlus"
            app:layout_constraintStart_toEndOf="@id/editPlus" />

        <EditText
            android:id="@+id/editVisitas"
            android:layout_width="53dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textVisitas"
            app:layout_constraintStart_toEndOf="@id/textVisitas" />


        <TextView
            android:id="@+id/textBiopedancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Biopedância:"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPlus" />

        <EditText
            android:id="@+id/editBiopedancia"
            android:layout_width="51dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textBiopedancia"
            app:layout_constraintStart_toEndOf="@id/textBiopedancia" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="159dp"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="314dp">

        <TextView
            android:id="@+id/titleVendas5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interocorrências ao assumir plantão"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_row="0" />

        <EditText
            android:id="@+id/editPersonal4"
            android:layout_width="319dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textPersonal"
            app:layout_constraintStart_toEndOf="@id/textPersonal" />

        <TextView
            android:id="@+id/titleVendas4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interocorrências ao deixar plantão"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPersonal5"
            android:layout_width="326dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/textPersonal"
            app:layout_constraintStart_toEndOf="@id/textPersonal" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxChecklist"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:padding="16dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="498dp">


        <TextView
            android:id="@+id/textMensal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faltas na equipe:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="43dp" />

        <TextView
            android:id="@+id/textMensal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ar-condicionado:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="75dp" />

        <TextView
            android:id="@+id/textMensal4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catracas:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="107dp" />

        <TextView
            android:id="@+id/textMensal5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evo/TEF/Biopedancia:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="139dp" />

        <TextView
            android:id="@+id/textMensal6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computadores:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="171dp" />

        <TextView
            android:id="@+id/textMensal7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manutenções em andamento:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="203dp" />

        <TextView
            android:id="@+id/textMensal8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISITAS:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="235dp" />

        <TextView
            android:id="@+id/titleVendas7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Outras informações:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
